<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#262424"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="4dp">

            <Button
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                style="@style/Widget.Material3.Button.TextButton"
                app:icon="@drawable/ic_arrow_back"
                app:iconTint="#FFFFFF"
                app:iconPadding="0dp"
                android:padding="0dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Event QR Codes"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:fontFamily="@font/anuphan_semibold"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Name -->
            <TextView
                android:id="@+id/event_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Swimming Lessons"
                android:textSize="20sp"
                android:fontFamily="@font/anuphan_semibold"
                android:textColor="#262424"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Promotional QR Code Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promotional QR Code"
                android:textSize="16sp"
                android:fontFamily="@font/anuphan_semibold"
                android:textColor="#262424"
                android:layout_marginBottom="8dp" />

            <!-- QR Code Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/promo_qr_image"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:contentDescription="Promotional QR Code"
                        android:background="#F5F5F5" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrants scan this QR code to view event details and join the waiting list."
                android:textSize="14sp"
                android:fontFamily="@font/anuphan"
                android:textColor="#B6ACAC"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Check-in QR Code Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check-in QR Code"
                android:textSize="16sp"
                android:fontFamily="@font/anuphan_semibold"
                android:textColor="#262424"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(For day of event)"
                android:textSize="12sp"
                android:fontFamily="@font/anuphan"
                android:textColor="#B6ACAC"
                android:layout_marginBottom="8dp" />

            <!-- Check-in QR Code Image -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/checkin_qr_image"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:contentDescription="Check-in QR Code"
                        android:background="#F5F5F5" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use this QR code for attendance tracking on the day of the event."
                android:textSize="14sp"
                android:fontFamily="@font/anuphan"
                android:textColor="#B6ACAC"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>