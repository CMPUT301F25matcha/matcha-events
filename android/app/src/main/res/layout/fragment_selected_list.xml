<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header with title and filter buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/selected_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected Entrants (20)"
            android:textSize="16sp"
            android:fontFamily="@font/anuphan_semibold"
            android:textColor="#262424"
            android:layout_marginBottom="12dp" />

        <!-- Filter buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter: "
                android:textSize="14sp"
                android:fontFamily="@font/anuphan"
                android:textColor="#262424"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/filter_all_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="All"
                android:textSize="12sp"
                android:fontFamily="@font/anuphan"
                android:textColor="#FFFFFF"
                android:backgroundTint="#262424"
                android:layout_marginEnd="4dp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button" />

            <Button
                android:id="@+id/filter_enrolled_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Enrolled"
                android:textSize="12sp"
                android:fontFamily="@font/anuphan"
                android:textColor="#FFFFFF"
                android:backgroundTint="#262424"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button" />

            <Button
                android:id="@+id/filter_cancelled_button"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Cancelled"
                android:textSize="12sp"
                android:fontFamily="@font/anuphan"
                android:textColor="#FFFFFF"
                android:backgroundTint="#262424"
                android:layout_marginStart="4dp"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

        <!-- Action buttons -->
        <Button
            android:id="@+id/export_csv_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ“¥ Export CSV"
            android:textSize="14sp"
            android:fontFamily="@font/anuphan"
            android:textColor="#000000"
            android:backgroundTint="#EDE9E9"
            android:layout_marginBottom="8dp"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/send_notification_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ“¤ Send Notification"
            android:textSize="14sp"
            android:fontFamily="@font/anuphan"
            android:textColor="#FFFFFF"
            android:backgroundTint="#262424"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

    <!-- Entrants list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selected_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:clipToPadding="false" />

</LinearLayout>