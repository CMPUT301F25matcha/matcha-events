<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/main_content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/status_bar_spacer"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@android:color/transparent" />

            <androidx.appcompat.widget.SearchView
                android:id="@+id/event_search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_search_bg"
                app:iconifiedByDefault="false"
                app:queryHint="Search events..." />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/featured_events_card"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/featured_events_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/page_indicator" />

                    <LinearLayout
                        android:id="@+id/page_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@android:color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/categories_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:drawableEnd="@drawable/ic_chevron_right"
                android:drawablePadding="8dp"
                android:gravity="center_vertical" />

            <HorizontalScrollView
                android:id="@+id/categories_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:scrollbars="none"
                android:fadeScrollbars="false">

                <LinearLayout
                    android:id="@+id/categories_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_music"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="12dp"
                        android:clipToPadding="false"
                        android:clipChildren="true"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:id="@+id/category_music_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:contentDescription="Music category"
                            android:src="@android:drawable/ic_media_play" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_sports"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="12dp"
                        android:clipToPadding="false"
                        android:clipChildren="true"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:id="@+id/category_sports_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:contentDescription="Sports category"
                            android:src="@android:drawable/ic_menu_more" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_food"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="12dp"
                        android:clipToPadding="false"
                        android:clipChildren="true"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:id="@+id/category_food_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:contentDescription="Food category"
                            android:src="@android:drawable/ic_menu_myplaces" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_art"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="12dp"
                        android:clipToPadding="false"
                        android:clipChildren="true"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:id="@+id/category_art_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:contentDescription="Art category"
                            android:src="@android:drawable/ic_menu_gallery" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_tech"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="12dp"
                        android:clipToPadding="false"
                        android:clipChildren="true"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:id="@+id/category_tech_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:contentDescription="Tech category"
                            android:src="@android:drawable/ic_menu_manage" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/category_education"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginEnd="12dp"
                        android:clipToPadding="false"
                        android:clipChildren="true"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:id="@+id/category_education_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            android:contentDescription="Education category"
                            android:src="@android:drawable/ic_menu_agenda" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/events_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <include
            android:id="@+id/bottom_navigation"
            layout="@layout/bottom_navigation_bar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
