<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- Success Icon -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✓"
        android:textSize="48sp"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Success!"
        android:textSize="20sp"
        android:fontFamily="@font/anuphan_semibold"
        android:textColor="#262424"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/success_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20 entrants selected and notified!"
        android:textSize="14sp"
        android:fontFamily="@font/anuphan"
        android:textColor="#262424"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Winner List (scrollable) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/winners_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• John Smith\n• Sarah Lee\n• Mike Chen\n... 17 more"
                android:textSize="14sp"
                android:fontFamily="@font/anuphan"
                android:textColor="#262424" />

        </LinearLayout>

    </ScrollView>

    <!-- View Selected Button -->
    <Button
        android:id="@+id/view_selected_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="View Selected"
        android:textSize="14sp"
        android:fontFamily="@font/anuphan_semibold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#262424"
        app:cornerRadius="12dp"
        style="@style/Widget.Material3.Button" />

</LinearLayout>