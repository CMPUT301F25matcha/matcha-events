<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Camera permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LotterySystemProject">

        <activity
            android:name=".views.entrant.UserInfoView"
            android:exported="true"
            android:theme="@style/Theme.LotterySystemProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.entrant.SearchableActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity android:name=".views.entrant.EntrantMainActivity">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchableActivity" />
        </activity>

        <activity
            android:name=".views.entrant.DeleteProfileActivity"
            android:exported="false"
            android:label="Delete Profile" />

        <activity android:name=".views.entrant.SearchResultsActivity" />
        <activity android:name=".views.entrant.CategoryEventListActivity" />
        <activity android:name=".views.admin.AdminLoginActivity" />
        <activity android:name=".views.entrant.EventDetailsActivity"
            android:exported="true">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" />
                <data android:host="cmput301f25matcha.github.io" />
                <data android:pathPattern="/eventinfo" />
            </intent-filter>


            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="lotterysystem"
                    android:host="event"
                    android:pathPattern=".*" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.entrant.ProfileHostActivity"
            android:exported="false" />
        <activity
            android:name=".views.entrant.EntrantProfileActivity"
            android:exported="false" />
        <activity
            android:name=".views.entrant.NotificationsActivity"
            android:exported="false"
            android:label="Notifications" />


        <activity
            android:name=".views.entrant.RegistrationHistoryActivity"
            android:exported="false"
            android:label="Registration History" />
        <activity
            android:name=".views.entrant.EditProfileActivity"
            android:exported="false"
            android:label="Edit Profile" />
        <activity
            android:name=".views.entrant.EventsHistoryActivity"
            android:exported="false"
            android:label="Events History" />

        <!-- Organizer Main Activity -->
        <activity
            android:name=".views.organizer.OrganizerMainActivity"
            android:exported="false" />

        <!-- QR Code Scanner Activity -->
        <activity
            android:name=".views.entrant.QRCodeScannerActivity"
            android:screenOrientation="portrait"
            android:exported="false"
            android:label="Scan QR Code" />



    </application>

</manifest>